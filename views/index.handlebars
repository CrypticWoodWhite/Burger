<div class="container">

    <section class="header">
        <h1 class="title">Eat Da Burger</h1>
        <h4><i class="fas fa-hamburger"></i> Om nom nom nom <i class="fas fa-hamburger"></i></h4>
    </section>

    <section class="main">
        <div class="row">
            <div class="five columns list">
                <h4>Burgers I want to devour</h4>

                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                            <li><button type="button" class="eat-burger">{{this.burger_name}}</button></li>
                        {{/unless}}
                    {{/each}}
                </ul>

            </div>

            <div class="two columns eat">
                <p>I'm hungry, click on a burger to let me inhale it!</p>
            </div>

            <div class="five columns list">
                <h4>Burgers I've destroyed</h4>
                <ul>
                    {{#each burger}}
                        {{#if devoured=true}}
                            <li>{{this.burger_name}}</li>
                        {{/if}}
                    {{/each}}
                </ul>

            </div>
        </div>
        <br><br>
